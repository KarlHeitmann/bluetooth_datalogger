#: include thread.kv
#: include setgraph.kv
#: include bluetoothscreen.kv

<MenuScreen>:
    BoxLayout:
        orientation: 'horizontal'
        SetGraph:
            id: MiGraf
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: wena_choro
                text: 'Goto settings'
                on_press: root.manager.current = 'settings'
            Button:
                text: 'Start Bluetooth'
                on_press: root.manager.current = 'bluetooth'
#on_press: root.start_bluetooth()
            Button:
                text: 'Quit'
                on_press: root.quit()
<BluetoothScreen>:
    BoxLayout:
        orientation: 'vertical'
        SetGraph:
        Label:
            text: root.raw_txt
        Label:
            text: root.conectando_text
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'

<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'

<BluetoothDataloggerApp@BoxLayout>:
    orientation: 'vertical'
    Button:
        id: connect
        text: 'Connect'
        on_press: app.on_connect()
