#: include setgraph.kv
<BluetoothScreen>:
    BoxLayout:
        orientation: 'vertical'
        SetGraph:
            id: MiGraf
        Label:
            text: root.raw_txt
            size_hint_y: 0.1
            multiline: True
        Label:
            text: root.conectando_text
            size_hint_y: 0.1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.075
            Button:
                text: 'Anterior'
                on_press: root.send_bl('anterior')
            Button:
                text: 'Siguiente'
                on_press: root.send_bl('siguiente\n')
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.075
            Button:
                text: 'Back to menu'
                on_press: root.manager.current = 'menu'
            Button:
                text: 'Clear'
                on_press: root.clear_graph()



